rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
      // TODO: ограничить доступ одной семьёй.
      // Можно хранить список разрешённых Telegram user_id в отдельном документе
      // или проверять принадлежность к семье через custom claims.
    }
  }
}
