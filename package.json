{
  "name": "family-telegram-bot-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/bot",
    "apps/web",
    "firebase"
  ],
  "scripts": {
    "ci": "npm ci",
    "build:web": "npm --workspace apps/web run build",
    "deploy:web": "firebase deploy --only hosting",
    "build:functions": "npm --workspace firebase run build",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "npm run build:web && npm run build:functions && firebase deploy"
  }
}
